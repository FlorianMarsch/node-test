scope.news=[];
scope.createNews={'message':''};
scope.loadNews = function(callback){
	$http({
 		method : 'GET',
 		url : '/api/news',
 		responseType : 'json'
 	}).then(function(response) {
 		scope.news=response;
 		if(callback){
 			callback();
 		}
 	},function(error) {
 		console.log(error);
 		if(callback){
 			callback();
 		}
 	});
};

scope.submitNews = function(){
	if(scope.createNews.message !== ''){
		scope.active = 'loading';
		$http({
     		method : 'POST',
     		url : '/api/news',
     		responseType : 'json',
     		body:JSON.stringify(scope.createNews)
     	}).then(function(response) {
