scope.players=[];
scope.bidOn;
scope.bid = function( aPlayer,ev){
	if(!aPlayer){
		return;
	}
	scope.bidOn = {};
	scope.bidOn.price = aPlayer.price;
	scope.bidOn.to = aPlayer.owner;
	scope.bidOn.from = scope.profile;
	scope.bidOn.player=aPlayer;

	scope.bidOn.players=[];
	dialog.show({
		controller: function () { this.parent = $scope; },
		controllerAs: 'dialog',
		templateUrl: '/bid',
		parent: angular.element(document.body),
		targetEvent: ev,
		clickOutsideToClose: true
	  });
};
scope.submitBid = function(ev){
	dialog.hide();
	scope.active = 'loading';
	$http({
		method : 'POST',
		url : '/api/offer/to/'+ev.to._id,
		responseType : 'json',
		data:JSON.stringify(ev)
	}).then(function(response) {
		scope.loadDemands(function(){
			scope.active = 'angebote';
		});
	},function(error) {
		scope.active = 'error';
		scope.error = error;
	});
}

scope.loadPlayers = function(callback){
	$http({
 		method : 'GET',
 		url : '/api/player',
 		responseType : 'json'
 	}).then(function(response) {
 		scope.players=response.data;
 		if(callback){
 			callback();
 		}
 	},function(error) {
 		console.log(error);
 		if(callback){
 			callback(error);
 		}else{
 			scope.active = 'error';
     		scope.error = error;
 		}
 	});
};
if(scope.user.id){
	scope.loadPlayers();
}